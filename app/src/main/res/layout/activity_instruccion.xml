<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.estudiante.proyecto.instruccion"
    android:background="@drawable/pantinst">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:gravity="bottom|right"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:paddingTop="0dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:id="@+id/imageView"
            android:background="@drawable/btnvolver"
            android:layout_marginStart="451dp"
            android:layout_marginTop="285dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:onClick="volver"
            android:layout_weight="0.15"
            android:layout_gravity="bottom|right" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="LLega a su casa"
            android:id="@+id/textView3"
            android:layout_below="@+id/linearLayout"
            android:layout_alignStart="@+id/textView"
            android:layout_gravity="center_vertical"
            android:autoText="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="sano y salvo"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView"
            style="2"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="para saltar"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/textView"
            style="3"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Toca la pantalla"
            android:id="@+id/textView"
            android:layout_marginStart="62dp"
            android:layout_toEndOf="@+id/linearLayout"
            android:layout_alignTop="@+id/imageView2" />

        <ImageView
            android:layout_width="236dp"
            android:layout_height="150dp"
            android:id="@+id/imageView2"
            android:src="@drawable/saltob"
            android:layout_below="@+id/textView4"
            android:layout_toEndOf="@+id/textView3"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

</RelativeLayout>
